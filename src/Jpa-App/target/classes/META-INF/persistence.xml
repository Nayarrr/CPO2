<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="nommez votre unité de persistence">
        <class>com.example.model.Livre</class>
        <class>com.example.model.Auteur</class>
        <class>com.example.model.Editeur</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="url de connection à votre base de données bibliotheque dans le conteneur"/>
            <property name="jakarta.persistence.jdbc.user" value="nom d'utilisateur configuré"/>
            <property name="jakarta.persistence.jdbc.password" value="mot de passe configuré"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>